@model MvcEmployee.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <h4>Employee Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="ID" />
        <!-- First Name -->
        <dt>@Html.DisplayNameFor(model => model.FirstName)</dt>
        <dd>@Html.DisplayFor(model => model.FirstName)</dd>
        <!-- Last Name -->
        <dt>@Html.DisplayNameFor(model => model.LastName)</dt>
        <dd>@Html.DisplayFor(model => model.LastName)</dd>
        <!-- Position -->
        <dt>@Html.DisplayNameFor(model => model.Position)</dt>
        <dd>@Html.DisplayFor(model => model.Position)</dd>
        <!-- Department -->
        <dt>@Html.DisplayNameFor(model => model.Department)</dt>
        <dd>@Html.DisplayFor(model => model.Department)</dd>
        <!-- Hire Date -->
        <dt>@Html.DisplayNameFor(model => model.HireDate)</dt>
        <dd>@Html.DisplayFor(model => model.HireDate.ToShortDateString())</dd>
        <!-- Email -->
        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>
        <!-- Phone -->
        <dt>@Html.DisplayNameFor(model => model.Phone)</dt>
        <dd>@Html.DisplayFor(model => model.Phone)</dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
